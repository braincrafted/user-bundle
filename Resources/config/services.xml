<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="bc_user.user_manager.class">Bc\Bundle\UserBundle\Entity\UserManager</parameter>
        <parameter key="bc_user.registration.form.type.class">Bc\Bundle\UserBundle\Form\Type\RegistrationFormType</parameter>
        <parameter key="bc_user.invite.form.type.class">Bc\Bundle\UserBundle\Form\Type\InviteFormType</parameter>
        <parameter key="bc_user.invite.form.data_transformer.class">Bc\Bundle\UserBundle\Form\DataTransformer\InviteToCodeTransformer</parameter>
        <parameter key="bc_user.invite_manager.class">Bc\Bundle\UserBundle\Entity\InviteManager</parameter>
    </parameters>

    <services>

        <service id="bc_user.registration.form.type" class="%bc_user.registration.form.type.class%">
            <argument>%fos_user.model.user.class%</argument>
            <argument>%bc_user.registration.invite_required%</argument>
            <tag name="form.type" alias="bc_user_registration" />
        </service>

        <service id="bc_user.invite.form.type" class="%bc_user.invite.form.type.class%">
            <argument type="service" id="bc_user.invite.form.data_transformer" />
            <tag name="form.type" alias="bc_invite" />
        </service>

        <service id="bc_user.invite.form.data_transformer" class="%bc_user.invite.form.data_transformer.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="bc_user.invite_manager" class="%bc_user.invite_manager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%bc_user.invite.class%</argument>
        </service>

        <service id="bc_user.user_manager" class="%bc_user.user_manager.class%">
            <argument type="service" id="security.encoder_factory" />
            <argument type="service" id="fos_user.util.username_canonicalizer" />
            <argument type="service" id="fos_user.util.email_canonicalizer" />
            <argument type="service" id="fos_user.entity_manager" />
            <argument>%bc_user.user.class%</argument>
        </service>

    </services>

</container>