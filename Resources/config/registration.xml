<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="bc_user.registration.form.handler.class">FOS\UserBundle\Form\Handler\RegistrationFormHandler</parameter>
        <parameter key="bc_user.name.form.type.class">Bc\Bundle\UserBundle\Form\Type\NameFormType</parameter>
    </parameters>

    <services>

        <service id="bc_user.name.form.type" class="%bc_user.name.form.type.class%">
            <tag name="form.type" alias="bc_name" />
        </service>

        <service id="bc_user.registration.form.handler" class="%bc_user.registration.form.handler.class%" scope="request" public="false">
            <argument type="service" id="fos_user.registration.form" />
            <argument type="service" id="request" />
            <argument type="service" id="bc_user.user_manager" />
            <argument type="service" id="fos_user.mailer" />
            <argument type="service" id="fos_user.util.token_generator" />
        </service>

    </services>

</container>