<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="bc_user.request_invite.form" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>bc_request_invite</argument>
            <argument>bc_request_invite</argument>
            <argument>null</argument>
            <argument type="collection">
                <argument key="validation_groups">%bc_user.request_invite.form.validation_groups%</argument>
            </argument>
        </service>

        <service id="bc_user.request_invite.form.type" class="Bc\Bundle\UserBundle\Form\Type\RequestInviteFormType">
            <argument>Bc\Bundle\UserBundle\Entity\InviteRequest</argument>
            <tag name="form.type" alias="bc_request_invite" />
        </service>

        <service id="bc_user.invite_request_manager" class="Bc\Bundle\UserBundle\Entity\InviteRequestManager">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>Bc\Bundle\UserBundle\Entity\InviteRequest</argument>
        </service>

        <service id="bc_user.request_invite.form.handler.default" class="Bc\Bundle\UserBundle\Form\Handler\RequestInviteFormHandler" scope="request" public="false">
            <argument type="service" id="bc_user.request_invite.form" />
            <argument type="service" id="request" />
            <argument type="service" id="bc_user.invite_request_manager" />
        </service>

    </services>

</container>