{% extends 'BraincraftedUserBundle::admin_layout.html.twig' %}

{% block braincrafted_user_admin_content %}

<div class="page-header">
    <h1>{{ 'admin.user.create_user'|trans({}, 'BraincraftedUserBundle') }}</h1>
</div>

<div class="btn-toolbar">
    <div class="btn-group"><a href="{{ path('braincrafted_user_admin_list') }}" class="btn"><i class="icon-chevron-left"></i> {{ 'admin.user.users'|trans({}, 'BraincraftedUserBundle') }}</a></div>
</div>

<form action="{{ path('braincrafted_user_admin_create') }}" method="post" class="form-horizontal" {{ form_enctype(form) }}>

