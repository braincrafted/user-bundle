<div class="page-header">
    <h1>Change your password</h1>
</div>

{% include "BraincraftedUserBundle:Profile:toolbar.html.twig" with { 'active': 'password' } %}

<hr>

<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">

    {{ bootstrap_set_style('horizontal') }}

    {{ form_widget(form) }}

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}</button>
        </div>
    </div>

    {{ bootstrap_set_style('') }}
</form>

{% include "BraincraftedUserBundle:Profile:delete_button.html.twig" %}
