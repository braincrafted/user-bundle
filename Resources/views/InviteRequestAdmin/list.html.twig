{% extends 'BcUserBundle::admin_layout.html.twig' %}

{% block bc_user_admin_content %}

<div class="page-header">
    <h1>{{ 'invite_request.invite_requests'|trans({}, 'BcUserAdminBundle') }}</h1>
</div>

<table class="table table-striped table-condensed table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>{{ 'invite_request.table.email'|trans({}, 'BcUserAdminBundle') }}</th>
            <th>{{ 'invite_request.table.date_created'|trans({}, 'BcUserAdminBundle') }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for inviteRequest in inviteRequests %}
        <tr>
            <td>{{ inviteRequest.id }}</td>
            <td>{{ inviteRequest.email }}</td>
            <td>{{ inviteRequest.createdAt|date('Y-m-d') }}</td>
            <td>
                <a href="{{ path('bc_user_admin_invite_request_invite', { 'inviteRequestId': inviteRequest.id }) }}" class="btn btn-mini">{{ 'invite_request.table.invite'|trans({}, 'BcUserAdminBundle') }}</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock bc_user_admin_content %}