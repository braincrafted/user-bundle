<div class="page-header">
    <h1>{{ 'registration.headline'|trans({}, 'BraincraftedUserBundle') }}</h1>
</div>

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" role="form">

    {{ bootstrap_set_style('horizontal') }}
    {{ form_widget(form) }}
    {{ bootstrap_set_style('') }}

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</button>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            {{ 'registration.have_account'|trans({}, 'BraincraftedUserBundle') }}
            <a href="{{ path('fos_user_security_login') }}">{{ 'registration.have_account_login'|trans({}, 'BraincraftedUserBundle') }}</a>
        </div>
    </div>

</form>
